rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write for authenticated users to their private knowledgeBase.
    match /artifacts/{appId}/users/{userId}/knowledgeBase/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write for authenticated users to their private blackboardImages.
    match /artifacts/{appId}/users/{userId}/blackboardImages/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}